{
  "comments": {
    "blockComment": [ "<!--", "-->" ]
  },
  "brackets": [
    ["<!--", "-->"],
    ["<", ">"],
    ["{", "}"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}"},
    { "open": "[", "close": "]"},
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" },
    { "open": "{", "close": "}"},
    { "open": "[", "close": "]"},
    { "open": "(", "close": ")" },
    { "open": "<", "close": ">" }
  ],
  "folding": {
    "markers": {
      "start": "^<(template|style|script|config|wxs)[^>]*>",
      "end": "^</(template|style|script|config|wxs)>"
    }
  }
}